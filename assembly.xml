<assembly>
    <id>distribution</id>
    <formats>
        <format>tgz</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/lib</outputDirectory>
        </dependencySet>
    </dependencySets>

    <fileSets>
        <fileSet>
            <lineEnding>unix</lineEnding>
            <directory>${project.build.outputDirectory}/config</directory>
            <outputDirectory>/config</outputDirectory>
        </fileSet>
        <fileSet>
            <lineEnding>unix</lineEnding>
            <directory>${project.build.outputDirectory}/bin</directory>
            <outputDirectory>/bin</outputDirectory>
        </fileSet>
    </fileSets>

    <files>
        <file>
            <source>${project.build.outputDirectory}/bin/uni-meter.sh</source>
            <outputDirectory>/bin</outputDirectory>
            <destName>uni-meter.sh</destName>
            <lineEnding>unix</lineEnding>
            <fileMode>0755</fileMode>
        </file>
        <file>
            <source>${project.build.outputDirectory}/bin$/uni-meter-and-avahi.sh</source>
            <outputDirectory>/bin</outputDirectory>
            <destName>uni-meter-and-avahi.sh</destName>
            <lineEnding>unix</lineEnding>
            <fileMode>0755</fileMode>
        </file>
    </files>
</assembly>